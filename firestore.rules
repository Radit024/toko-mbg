rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Semua data hanya dapat diakses oleh pengguna yang sudah login.
    // Keamanan data bergantung pada ID toko (UID Firebase) yang tidak bisa ditebak.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

  }
}
